{
  "name": "mern-stack-app",
  "version": "0.1.0",
  "private": true,
  "description": "A robust starting foundation for a full stack MERN application that comes with pre-built authentication",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --resolveJsonModule",
    "build:client": "cd client && npm install && npm run build && npm run client:deploy",
    "client:deploy": "node tools/moveClientBuildFiles.js",
    "dev:client": "cd client && npm run start",
    "dev:server": "cross-env NODE_ENV=development concurrently -k \"npm run watch:ts\" \"npm run watch:node\"",
    "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:client\"",
    "watch:node": "nodemon dist/index.js",
    "watch:ts": "tsc -w",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles"
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@sendgrid/mail": "^6.4.0",
    "@shelf/jest-mongodb": "^1.1.3",
    "@types/async": "^3.0.0",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/dotenv-flow": "^3.0.0",
    "@types/express": "^4.17.0",
    "@types/express-rate-limit": "^3.3.3",
    "@types/express-validator": "^3.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/helmet": "0.0.45",
    "@types/jest": "^24.0.25",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mongoose": "^5.5.34",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.24",
    "@types/passport": "^1.0.2",
    "@types/passport-facebook": "^2.1.9",
    "@types/passport-google-oauth2": "^0.1.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-linkedin-oauth2": "^1.5.1",
    "@types/react-swipeable": "^5.2.0",
    "@types/request": "^2.48.4",
    "@types/sanitize-html": "^1.20.2",
    "@types/sendgrid": "^4.3.0",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "async": "^3.0.1",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "dotenv-flow": "^3.1.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "express-validator": "^6.3.0",
    "fs-extra": "^8.0.1",
    "helmet": "^3.21.2",
    "jest": "^24.9.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.8.0",
    "morgan": "^1.9.1",
